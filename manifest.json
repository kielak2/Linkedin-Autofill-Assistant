{
  "manifest_version": 3,
  "name": "LinkedIn Autofill Assistant",
  "version": "1.0",
  "description": "Automatically customize LinkedIn messages with contact names.",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}